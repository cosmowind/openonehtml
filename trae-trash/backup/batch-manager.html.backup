    <script>
        // å…¨å±€å˜é‡
        let uploadedFiles = [];
        
        // é¢„è®¾çš„å¼€å‘æ¨¡å‹é€‰é¡¹
        const modelOptions = [
            'Human Developer',
            'AI Assistant', 
            'Code Reviewer',
            'UI/UX Designer',
            'Frontend Developer',
            'Backend Developer',
            'Full Stack Developer',
            'DevOps Engineer'
        ];

        // åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            setupFileUpload();
        });

        // è®¾ç½®æ–‡ä»¶ä¸Šä¼ åŠŸèƒ½
        function setupFileUpload() {
            const uploadArea = document.getElementById('upload-area');
            const fileInput = document.getElementById('file-input');

            // ç‚¹å‡»ä¸Šä¼ åŒºåŸŸè§¦å‘æ–‡ä»¶é€‰æ‹©
            uploadArea.addEventListener('click', function() {
                fileInput.click();
            });

            // æ–‡ä»¶é€‰æ‹©äº‹ä»¶
            fileInput.addEventListener('change', function(e) {
                handleFiles(e.target.files);
            });

            // æ‹–æ‹½äº‹ä»¶
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });

            uploadArea.addEventListener('dragleave', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
            });

            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                handleFiles(e.dataTransfer.files);
            });
        }

        // å¤„ç†ä¸Šä¼ çš„æ–‡ä»¶
        function handleFiles(files) {
            for (let file of files) {
                if (file.type === 'text/html' || file.name.endsWith('.html')) {
                    const fileData = {
                        id: Date.now() + Math.random(),
                        file: file,
                        name: file.name,
                        size: file.size,
                        model: modelOptions[0] // é»˜è®¤é€‰æ‹©ç¬¬ä¸€ä¸ªæ¨¡å‹
                    };
                    uploadedFiles.push(fileData);
                    addFileToList(fileData);
                }
            }
        }

        // æ·»åŠ æ–‡ä»¶åˆ°åˆ—è¡¨
        function addFileToList(fileData) {
            const fileList = document.getElementById('file-list');
            const fileItem = document.createElement('div');
            fileItem.className = 'file-item';
            fileItem.dataset.fileId = fileData.id;

            const modelOptionsHtml = modelOptions.map(model => 
                `<option value="${model}" ${model === fileData.model ? 'selected' : ''}>${model}</option>`
            ).join('');

            fileItem.innerHTML = `
                <div class="file-info">
                    <div class="file-icon">ğŸ“„</div>
                    <div class="file-details">
                        <h4>${fileData.name}</h4>
                        <p>æ–‡ä»¶å¤§å°: ${formatFileSize(fileData.size)}</p>
                    </div>
                </div>
                <div class="model-selector">
                    <label>å¼€å‘æ¨¡å‹:</label>
                    <select onchange="updateFileModel('${fileData.id}', this.value)">
                        ${modelOptionsHtml}
                    </select>
                    <button class="remove-file" onclick="removeFile('${fileData.id}')">åˆ é™¤</button>
                </div>
            `;

            fileList.appendChild(fileItem);
        }

        // æ›´æ–°æ–‡ä»¶çš„æ¨¡å‹
        function updateFileModel(fileId, model) {
            const file = uploadedFiles.find(f => f.id == fileId);
            if (file) {
                file.model = model;
            }
        }

        // åˆ é™¤æ–‡ä»¶
        function removeFile(fileId) {
            uploadedFiles = uploadedFiles.filter(f => f.id != fileId);
            const fileItem = document.querySelector(`[data-file-id="${fileId}"]`);
            if (fileItem) {
                fileItem.remove();
            }
        }

        // æ¸…ç©ºæ‰€æœ‰æ–‡ä»¶
        function clearAllFiles() {
            uploadedFiles = [];
            document.getElementById('file-list').innerHTML = '';
        }

        // æ ¼å¼åŒ–æ–‡ä»¶å¤§å°
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // å¤„ç†æ–‡ä»¶
        async function processFiles() {
            if (uploadedFiles.length === 0) {
                alert('è¯·å…ˆä¸Šä¼ HTMLæ–‡ä»¶');
                return;
            }

            // è·å–å…±åŒè®¾ç½®
            const commonScene = document.getElementById('common-scene').value.trim();
            const commonPrompt = document.getElementById('common-prompt').value.trim();
            const commonTags = document.getElementById('common-tags').value.trim();

            if (!commonScene || !commonPrompt) {
                alert('è¯·å¡«å†™èƒŒæ™¯éœ€æ±‚å’Œæç¤ºè¯');
                return;
            }

            // æ˜¾ç¤ºè¿›åº¦æ¡
            const progressSection = document.getElementById('progress-section');
            const progressFill = document.getElementById('progress-fill');
            const progressText = document.getElementById('progress-text');
            const processBtn = document.getElementById('process-btn');
            
            progressSection.classList.remove('hidden');
            processBtn.disabled = true;
            processBtn.textContent = 'å¤„ç†ä¸­...';

            // å¤„ç†æ¯ä¸ªæ–‡ä»¶
            const totalFiles = uploadedFiles.length;
            for (let i = 0; i < totalFiles; i++) {
                const fileData = uploadedFiles[i];
                const progress = ((i + 1) / totalFiles) * 100;
                
                progressFill.style.width = progress + '%';
                progressText.textContent = `æ­£åœ¨å¤„ç†: ${fileData.name} (${i + 1}/${totalFiles})`;

                try {
                    await processSingleFile(fileData, commonScene, commonPrompt, commonTags);
                } catch (error) {
                    console.error('å¤„ç†æ–‡ä»¶å¤±è´¥:', error);
                    alert(`å¤„ç†æ–‡ä»¶ ${fileData.name} æ—¶å‡ºé”™: ${error.message}`);
                }

                // æ·»åŠ å»¶è¿Ÿä»¥ä¾¿çœ‹åˆ°è¿›åº¦
                await new Promise(resolve => setTimeout(resolve, 500));
            }

            progressText.textContent = 'å¤„ç†å®Œæˆï¼';
            processBtn.disabled = false;
            processBtn.textContent = 'ğŸš€ å¤„ç†æ–‡ä»¶';
            
            alert('æ‰€æœ‰æ–‡ä»¶å¤„ç†å®Œæˆï¼');
        }

        // å¤„ç†å•ä¸ªæ–‡ä»¶
        async function processSingleFile(fileData, scene, prompt, tags) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    try {
                        const htmlContent = e.target.result;
                        
                        // åˆ›å»ºJSONé…ç½®
                        const config = {
                            original_name: fileData.name,
                            scene: scene,
                            prompt: prompt,
                            models: [{
                                name: fileData.model,
                                role: 'developer',
                                description: `è´Ÿè´£å¼€å‘ ${fileData.name}`
                            }],
                            tags: tags ? tags.split(',').map(tag => tag.trim()) : [],
                            features: [
                                'responsive_design',
                                'modern_ui',
                                'interactive_elements'
                            ],
                            created_at: new Date().toISOString(),
                            updated_at: new Date().toISOString()
                        };

                        // ä¸‹è½½JSONæ–‡ä»¶
                        const jsonBlob = new Blob([JSON.stringify(config, null, 2)], { type: 'application/json' });
                        const jsonUrl = URL.createObjectURL(jsonBlob);
                        const jsonLink = document.createElement('a');
                        jsonLink.href = jsonUrl;
                        jsonLink.download = fileData.name.replace('.html', '.json');
                        jsonLink.click();
                        URL.revokeObjectURL(jsonUrl);

                        resolve();
                    } catch (error) {
                        reject(error);
                    }
                };

                reader.onerror = function() {
                    reject(new Error('æ–‡ä»¶è¯»å–å¤±è´¥'));
                };

                reader.readAsText(fileData.file);
            });
        }
    </script>
